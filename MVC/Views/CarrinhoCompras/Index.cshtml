@model MVC.ViewModels.CarrinhoComprasViewModel

@{
    ViewBag.Title = "Carrinho de compras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Resumo - Carrinho de compras</h2>

<p>@Model.Menssagem</p>

<div>
    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>Produto</th>
            <th>Valor</th>
        </tr>
        </thead>
        
        <tbody>
        @foreach (var produto in Model.Produtos)
        {
            <tr>
                <td>@produto.Nome</td>
                <td>@produto.valor</td>
            </tr>
        }
        </tbody>
        <tfoot>
        <tr>
            <td><strong>Total</strong></td>
            <td><strong>@Model.ValorTotal</strong></td>
        </tr>
        </tfoot>
    </table>

</div>

<div>
    @*@Html.Action("Categorias", "CarrinhoCompras");*@
    @{
        Html.RenderAction("Categorias", "CarrinhoCompras");
    }
</div>